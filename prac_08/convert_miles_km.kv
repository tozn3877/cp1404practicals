BoxLayout:
    orientation: 'vertical'
    padding: 5
    spacing: 5

    BoxLayout:
        orientation: 'horizontal'
        spacing: 5

        TextInput:
            id: input_miles
            text: '0'
            font_size: 48
            multiline: False
            on_text: app.convert_miles_to_km()


        BoxLayout:
            orientation: 'vertical'
            spacing: 5

            Button:
                text: 'Up'
                on_press: app.increment_miles(1)

            Button:
                text: 'Down'
                on_press: app.increment_miles(-1)

#    Button:
#        text: 'Convert miles to km'
#        on_press: app.convert_miles_to_km()

    Label:
        text: app.output_km_text
        font_size: 48
        color: (1, 1, 0, 1)
